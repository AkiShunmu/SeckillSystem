<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.geely.seckillsystem.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.geely.seckillsystem.pojo.User">
        <id column="id" property="id"/>
        <result column="nickname" property="nickname"/>
        <result column="user_password" property="userPassword"/>
        <result column="slat" property="slat"/>
        <result column="head" property="head"/>
        <result column="register_date" property="registerDate"/>
        <result column="last_login_date" property="lastLoginDate"/>
        <result column="login_cont" property="loginCont"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, nickname, user_password, slat, head, register_date, last_login_date, login_cont
    </sql>

    <select id="getUser" parameterType="java.util.Map" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from t_user
        where
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="nickname != null">
            and nickname like concat(concat('%', #{nickname}), '%')
        </if>
    </select>

</mapper>
